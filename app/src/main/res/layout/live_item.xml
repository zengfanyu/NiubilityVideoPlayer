<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/dimen_600dp"
              android:layout_height="@dimen/dimen_160dp"
              android:layout_gravity="center"
              android:layout_margin="@dimen/dimen_30dp"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_iv_live_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cctv_1"/>

    <TextView
        android:id="@+id/id_tv_live_title"
        android:layout_width="@dimen/dimen_360dp"
        android:layout_height="@dimen/dimen_160dp"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:gravity="center"
        android:text="CCTV-1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_40sp"/>


</LinearLayout>