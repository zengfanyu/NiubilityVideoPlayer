<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/id_album_container"
              android:orientation="vertical"
              android:padding="@dimen/dimen_8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/id_album_poster"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_240dp"
            android:background="@drawable/ic_loading_hor"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/id_album_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tip_background"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:paddingBottom="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingStart="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_30dp"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_24sp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/id_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingLeft="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_15dp"
        android:textColor="@color/grey_medium"
        android:textSize="@dimen/dimen_26sp"/>


</LinearLayout>